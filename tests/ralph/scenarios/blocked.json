{
  "name": "blocked",
  "description": "Outputs RALPH_BLOCKED signal - used to test that workflow pauses when blocked",
  "phases": {
    "plan": {
      "messages": {
        "work": "Attempting to create spec...",
        "done": ""
      },
      "signal": "RALPH_BLOCKED: Missing required context"
    },
    "ready": {
      "messages": {
        "work": "Attempting to create tasks...",
        "done": ""
      },
      "signal": "RALPH_BLOCKED: Spec is incomplete"
    },
    "run": {
      "messages": {
        "work": "Attempting to implement...",
        "done": "Cannot proceed with implementation."
      },
      "signal": "RALPH_BLOCKED: Need API key to access external service"
    }
  }
}
